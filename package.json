{
  "name": "meeting-guard-desktop",
  "version": "1.0.0",
  "description": "System-level overlay alerts for Zoom and Google Meet desktop",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:mac": "electron-builder --mac --x64 --arm64"
  },
  "dependencies": {
    "electron": "^29.0.0"
  },
  "devDependencies": {
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.meetingguard.desktop",
    "productName": "Meeting Guard",
    "copyright": "Meeting Guard",
    "files": [
      "main.js",
      "preload.js",
      "overlay.html",
      "overlay.js",
      "detector/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [{ "target": "dmg", "arch": ["x64", "arm64"] }],
      "icon": "assets/icon.png",
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist",
      "hardenedRuntime": false
    },
    "dmg": {
      "title": "Meeting Guard",
      "contents": [
        { "x": 130, "y": 220 },
        { "x": 410, "y": 220, "type": "link", "path": "/Applications" }
      ]
    }
  }
}
